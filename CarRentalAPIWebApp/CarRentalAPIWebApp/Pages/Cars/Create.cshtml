@page
@model CarRentalAPIWebApp.Pages.Cars.CreateModel
@{
    ViewData["Title"] = "Додати автомобіль";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="bg-light shadow rounded p-4">
                <h2 class="mb-4 text-black text-center">Додати новий автомобіль</h2>

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Car.Brand" class="form-label text-black">Бренд</label>
                        <input asp-for="Car.Brand" class="form-control" placeholder="Введіть бренд" />
                        <span asp-validation-for="Car.Brand" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Car.Model" class="form-label text-black">Модель</label>
                        <input asp-for="Car.Model" class="form-control" placeholder="Введіть модель" />
                        <span asp-validation-for="Car.Model" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Car.Year" class="form-label text-black">Рік</label>
                        <input asp-for="Car.Year" class="form-control" type="number" min="1900" max="2025" placeholder="Введіть рік" />
                        <span asp-validation-for="Car.Year" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Car.StatusId" class="form-label text-black">Статус</label>
                        <select asp-for="Car.StatusId" class="form-control" asp-items="Model.Statuses">
                            <option value="" disabled selected>Виберіть статус</option>
                        </select>
                        <span asp-validation-for="Car.StatusId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Car.PricePerDay" class="form-label text-black">Ціна за день (грн)</label>
                        <input asp-for="Car.PricePerDay" class="form-control" type="number" min="0.01" step="0.01" placeholder="Введіть ціну" />
                        <span asp-validation-for="Car.PricePerDay" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">Додати</button>
                        <a asp-page="Index" class="btn btn-secondary">Назад</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}